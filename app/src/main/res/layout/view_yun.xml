<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chenyu="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_yun_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"/>
    <!--功能菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.75"
        android:orientation="horizontal">
        <!--第一列-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <!--第二列。。。功能菜单-->
        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/d_yun"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">
            <!--第一行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/d_close"/>
            </LinearLayout>
            <!--第二行-->
            <LinearLayout
                android:id="@+id/ll_first_line"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2">

                <com.example.addedxmldynamic.widget.ImgTextView
                    android:id="@+id/itv_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    chenyu:cy_backgroud="@drawable/d_zdcx"
                    chenyu:cy_backgroud_height="40dp"
                    chenyu:cy_backgroud_width="40dp"
                    chenyu:cy_text_color="@color/TextColorBlack"
                    chenyu:cy_text_size="@dimen/txt_img_size"/>

                <com.example.addedxmldynamic.widget.ImgTextView
                    android:id="@+id/itv_b"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    chenyu:cy_backgroud="@drawable/d_fqbl"
                    chenyu:cy_backgroud_height="40dp"
                    chenyu:cy_backgroud_width="40dp"
                    chenyu:cy_text_color="@color/TextColorBlack"
                    chenyu:cy_text_size="@dimen/txt_img_size"/>

                <com.example.addedxmldynamic.widget.ImgTextView
                    android:id="@+id/itv_c"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    chenyu:cy_backgroud="@drawable/d_edtz"
                    chenyu:cy_backgroud_height="40dp"
                    chenyu:cy_backgroud_width="40dp"
                    chenyu:cy_text_color="@color/TextColorBlack"
                    chenyu:cy_text_size="@dimen/txt_img_size"/>

                <com.example.addedxmldynamic.widget.ImgTextView
                    android:id="@+id/itv_d"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    chenyu:cy_backgroud="@drawable/d_cxgn"
                    chenyu:cy_backgroud_height="40dp"
                    chenyu:cy_backgroud_width="40dp"
                    chenyu:cy_text_color="@color/TextColorBlack"
                    chenyu:cy_text_size="@dimen/txt_img_size"/>

            </LinearLayout>
            <!--第三行-->
            <LinearLayout
                android:id="@+id/ll_second_line"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2">

                <com.example.addedxmldynamic.widget.ImgTextView
                    android:id="@+id/itv_e"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    chenyu:cy_backgroud="@drawable/d_jfcx"
                    chenyu:cy_backgroud_height="40dp"
                    chenyu:cy_backgroud_width="40dp"
                    chenyu:cy_text_color="@color/TextColorBlack"
                    chenyu:cy_text_size="@dimen/txt_img_size"/>

                <com.example.addedxmldynamic.widget.ImgTextView
                    android:id="@+id/itv_f"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    chenyu:cy_backgroud="@drawable/d_wyhk"
                    chenyu:cy_backgroud_height="40dp"
                    chenyu:cy_backgroud_width="40dp"
                    chenyu:cy_text_color="@color/TextColorBlack"
                    chenyu:cy_text_size="@dimen/txt_img_size"/>

                <com.example.addedxmldynamic.widget.ImgTextView
                    android:id="@+id/itv_g"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    chenyu:cy_backgroud="@drawable/d_wybk"
                    chenyu:cy_backgroud_height="40dp"
                    chenyu:cy_backgroud_width="40dp"
                    chenyu:cy_text_color="@color/TextColorBlack"
                    chenyu:cy_text_size="@dimen/txt_img_size"/>

                <com.example.addedxmldynamic.widget.ImgTextView
                    android:id="@+id/itv_h"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    chenyu:cy_backgroud="@drawable/d_wyj"
                    chenyu:cy_backgroud_height="40dp"
                    chenyu:cy_backgroud_width="40dp"
                    chenyu:cy_text_color="@color/TextColorBlack"
                    chenyu:cy_text_size="@dimen/txt_img_size"/>
            </LinearLayout>
            <!--第四行-->
            <TextView
                android:id="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.8"
                android:background="@drawable/shape_button_bg"
                android:gravity="center"
                android:text="备注"
                android:textColor="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"/>
        </LinearLayout>
        <!--第三列-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.9"/>

</LinearLayout>
